<Window x:Class="Hash_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hash_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="447.334" Width="664.333" Padding="10">
    <Grid Margin="10,0,10,10">
        <Grid HorizontalAlignment="Left" Height="283" Margin="10,69,0,0" VerticalAlignment="Top" Width="616">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="chkAll" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True" Height="15" Width="20"/>
            <CheckBox x:Name="chkMD5" Content="MD5" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="17" IsChecked="{Binding ElementName=chkAll, Path=IsChecked, Mode=OneWay}" Grid.Row="1" Width="46"/>
            <TextBox x:Name="txtMD5" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" IsEnabled="{Binding ElementName=chkMD5, Path=IsChecked}" FontFamily="Consolas" Grid.Column="1" Grid.Row="1"/>
            <CheckBox x:Name="chkSHA1" Content="SHA1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="17" IsChecked="{Binding IsChecked, ElementName=chkAll, Mode=OneWay}" Grid.Row="2" Width="49"/>
            <TextBox x:Name="txtSHA1" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" IsEnabled="{Binding IsChecked, ElementName=chkSHA1}" FontFamily="Consolas" Grid.Column="1" Grid.Row="2"/>
            <CheckBox x:Name="chkSHA256" Content="SHA256" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="17" IsChecked="{Binding IsChecked, ElementName=chkAll, Mode=OneWay}" Grid.Row="3" Width="62"/>
            <TextBox x:Name="txtSHA256" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" IsEnabled="{Binding IsChecked, ElementName=chkSHA256}" FontFamily="Consolas" Grid.Column="1" Grid.Row="3"/>
            <CheckBox x:Name="chkSHA512" Content="SHA512" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="17" IsChecked="{Binding IsChecked, ElementName=chkAll, Mode=OneWay}" Grid.Row="5" Width="62"/>
            <TextBox x:Name="txtSHA512" HorizontalAlignment="Left" Height="51" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" IsEnabled="{Binding IsChecked, ElementName=chkSHA512}" FontFamily="Consolas" Grid.Column="1" Grid.Row="5"/>
            <Label x:Name="lblResult" Content="Result" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.482,0.154" Grid.Column="1" Height="26" Width="108"/>
            <CheckBox x:Name="chkSHA384" Content="SHA384" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="17" IsChecked="{Binding IsChecked, ElementName=chkAll, Mode=OneWay}" Grid.Row="4" Width="62"/>
            <TextBox x:Name="txtSHA384" HorizontalAlignment="Left" Height="51" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" IsEnabled="{Binding IsChecked, ElementName=chkSHA384}" FontFamily="Consolas" Grid.Column="1" Grid.Row="4"/>
        </Grid>
        <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top"/>
        <Separator HorizontalAlignment="Left" Height="14" Margin="10,357,0,0" VerticalAlignment="Top" Width="616"/>
        <Button x:Name="btnCalculate" Content="Calculate" HorizontalAlignment="Left" Margin="550,376,0,0" VerticalAlignment="Top" Width="76" Click="btnCalculate_Click" IsDefault="True" IsEnabled="False"/>
        <Grid HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="616">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblFileOpen" Content="File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.482,0.154"/>
            <TextBox x:Name="txtFileOpen" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" Grid.Column="1" IsEnabled="False" />
            <Button x:Name="btnFileOpen" Content="Open" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="68" Height="23" Click="btnFileOpen_Click" RenderTransformOrigin="0.653,1.29" Grid.Column="2"/>
        </Grid>
        <Separator HorizontalAlignment="Left" Height="16" Margin="10,48,0,0" VerticalAlignment="Top" Width="616"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="470,376,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click" IsEnabled="False"/>

    </Grid>
</Window>
